<Window x:Class="MagexPad.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MagexPad"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height=".3*" />            
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        
        <TextBox Uid="Input" Grid.Row="0" 
                 ToolTip="Insert a Magex or a Regex"
                 Text="Insert a Magex or a Regex"
                 AcceptsReturn="True" />
        
        <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Center">
            <Button Uid="Magex2Regex" HorizontalAlignment="Center" MinWidth="150" Margin="10,0" Click="Button_Click">Magex -> Regex</Button>
            <Button Uid="Regex2Magex" HorizontalAlignment="Center" MinWidth="150" Margin="10,0">Regex -> Magex</Button>
        </StackPanel>
        
        <TextBox Uid="Output" Grid.Row="2" />
    </Grid>
</Window>
